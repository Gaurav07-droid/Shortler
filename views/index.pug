doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")    
        link(rel="stylesheet",href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous")
        title Shortler    
    body(class="mt-5")
        h1(class="mx-auto d-grid gap-3 p-3 mb-2" style="width:200px") Shortler
        .container(class="p-2 bg-light border mt-3")
            form(action="/shortUrl", method="post", class="my-4 row row-cols-lg-auto g-3 align-items-center")
                label(for="fullUrl" class="sr-only") URL
                input#fullUrl(required,type="url",name="fullUrl",placeholder="Your url here.." class="form-control" style="width:1000px" )
                button(type="submit" class="btn btn-primary ms-2") Short
            table(class="table table-striped table-responsive shadow-lg p-3 mb-5 bg-body rounded")
                thead
                    tr
                        th Full url
                        th Short url
                        th clicks
                    each url in urls
                        tbody
                            tr 
                                td
                                    a(href= `${url.full}`)= url.full 
                                td
                                    a(href= `/${url.short}` class="link-success" target="_blank")= url.short
                                td(class="text-primary")= url.clicks
                                td
                                    a(class="btn btn-danger" href=`/delete/${url.id}`) delete

